h1 Hupu News List

p
  form.form-inline
    .form-group
      = search_field_tag 'query', @query, class: 'form-control', placeholder: 'Search'

p = page_entries_info @hupu_news

.row
  - @hupu_news.each do |hupu_news|
    .col-sm-7
      .thumbnail
        = image_tag(hupu_news.img_url)
        .caption
          = link_to hupu_news.title, hupu_news.href, target: '_blank'
          .pull-right
            = link_to 'Baidu', Utils.baidu_image_search_url(hupu_news.img_url), target: '_blank'
            | &nbsp;
            = link_to 'Google', Utils.google_image_search_url(hupu_news.img_url), target: '_blank'

div
  = paginate @hupu_news

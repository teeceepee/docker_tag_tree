javascript:
  function bmi (height, weight) {
    var h = height / 100
    return weight / (h * h)
  }

  function renderValues () {
    var heightEl = $("#height-el")
    var weightEl = $("#weight-el")
    var height = parseInt(heightEl.val())
    var weight = parseInt(weightEl.val())
    var bmiStr = bmi(height, weight).toFixed(1)

    $("#height").html(height)

    $("#weight").html(weight)
    $("#bmi").html(bmiStr)
  }


  document.addEventListener("DOMContentLoaded", function () {
    $("[data-js=trigger]").on("change", renderValues)

    renderValues()
  })


